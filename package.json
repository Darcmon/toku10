{
    "name": "toku10-monorepo",
    "version": "1.0.0",
    "private": true,
    "description": "Full-stack application with Vue.js frontend and Python backend",
    "scripts": {
        "dev:frontend": "cd frontend && npm run dev",
        "dev:backend": "cd backend && python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
        "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
        "build:frontend": "cd frontend && npm run build",
        "install:frontend": "cd frontend && npm install",
        "install:backend": "cd backend && pip install -r requirements.txt",
        "install:all": "npm run install:frontend && npm run install:backend",
        "lint:frontend": "cd frontend && npm run lint",
        "test:frontend": "cd frontend && npm run test:unit"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "workspaces": [
        "frontend"
    ]
}